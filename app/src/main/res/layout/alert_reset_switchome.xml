<?xml version="1.0"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#232323"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    tools:context="com.app1t1617.iotgroup.swithome.Login.ResetPassActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Reiniciando sistema"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textColor="@color/textos" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="¿Estás seguro de que quieres reiniciar el sistema?"
        android:textAlignment="center"
        android:textSize="16dp"
        android:textColor="@color/textos" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Todos los datos se perderán."
        android:textAlignment="center"
        android:textSize="16dp"
        android:textColor="@color/textos" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp">
        <Button
            android:id="@+id/cancel_reset"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedbutton"
            android:text="Cancelar"
            android:textColor="@color/textos"
            android:layout_weight="1"
            android:layout_marginRight="10dp"/>
        <Button
            android:id="@+id/accept_reset"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_danger_buton"
            android:text="Reiniciar"
            android:textColor="@color/textos"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"/>
    </LinearLayout>


</LinearLayout>