<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/premiun_dark"
    android:visibility="visible"
    android:id="@+id/mainView"
    tools:context="com.app1t1617.iotgroup.swithome.Login.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="307dp"
            android:layout_height="289dp"
            app:srcCompat="@drawable/logo"
            tools:layout_editor_absoluteX="52dp"
            tools:layout_editor_absoluteY="16dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginTop="13dp"
                app:srcCompat="@drawable/user_icon"
                tools:layout_editor_absoluteX="75dp"
                tools:layout_editor_absoluteY="351dp" />

            <EditText
                android:id="@+id/user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/placeHoldersUP"
                android:ems="10"
                android:fontFamily="@font/roboto"
                android:hint="Usuario"
                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                android:textColor="@color/textos"
                android:textColorHint="@color/botones"
                tools:layout_editor_absoluteX="114dp"
                tools:layout_editor_absoluteY="341dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginTop="13dp"
                app:srcCompat="@drawable/pass_icon"
                tools:layout_editor_absoluteX="75dp"
                tools:layout_editor_absoluteY="431dp" />

            <EditText
                android:id="@+id/pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/placeHoldersUP"
                android:ems="10"
                android:fontFamily="@font/roboto"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:textColorHint="@color/botones"
                android:textColor="@color/textos"
                tools:layout_editor_absoluteX="114dp"
                tools:layout_editor_absoluteY="424dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonLogIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/roundedbutton"
                android:elevation="0dp"
                android:fontFamily="@font/roboto"
                android:onClick="loginUser"
                android:text="Log In"
                android:textColor="@color/textos"
                android:visibility="visible"
                tools:layout_editor_absoluteX="161dp"
                tools:layout_editor_absoluteY="509dp" />

            <ProgressBar
                android:id="@+id/chargeBar"
                style="@style/Base.Widget.AppCompat.ProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/buttonRecoverPass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="¿Olvidaste la contraseña?"
                android:textColor="#999999"
                android:textSize="15sp"
                tools:layout_editor_absoluteX="121dp"
                tools:layout_editor_absoluteY="576dp"
                android:onClick="changeToResetPass"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="¿No estás registrado?"
                android:textColor="#999999"
                android:textSize="15sp"
                tools:layout_editor_absoluteX="98dp"
                tools:layout_editor_absoluteY="615dp" />

            <TextView
                android:id="@+id/buttonGoToRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:paddingLeft="5dp"
                android:text="Regístrate"
                android:textColor="#F5F5F5"
                android:textSize="15sp"
                tools:layout_editor_absoluteX="248dp"
                tools:layout_editor_absoluteY="615dp"
                android:onClick="changeToRegister"/>

        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
