<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/premiun_dark"
    tools:context="com.app1t1617.iotgroup.swithome.Devices.DevicesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_My_Devices"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_weight="0"
            android:fontFamily="@font/michroma"
            android:gravity="center"
            android:lineSpacingExtra="8sp"
            android:text="Mis dispositivos"
            android:textAlignment="center"
            android:textColor="@color/botones"
            android:textSize="30sp"
            android:typeface="sans"
            android:visibility="visible"
            tools:layout_editor_absoluteX="119dp"
            tools:layout_editor_absoluteY="57dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:id="@+id/sound_button"
                android:clickable="true"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:background="@drawable/custombordersound"
                android:gravity="fill"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_Sound"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="40dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/sonido"
                    tools:layout_editor_absoluteX="75dp"
                    tools:layout_editor_absoluteY="351dp" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto"
                    android:layout_marginLeft="0dp"
                    android:text="Sonido"
                    android:textColor="@color/textos"
                    android:textSize="12pt" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:id="@+id/light_button"
                android:clickable="true"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:background="@drawable/customborderligth"
                android:gravity="fill"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_Light"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="40dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/luz"
                    tools:layout_editor_absoluteX="75dp"
                    tools:layout_editor_absoluteY="351dp" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto"
                    android:layout_marginLeft="0dp"
                    android:text="IluminaciÃ³n"
                    android:textColor="@color/textos"
                    android:textSize="12pt" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:clickable="true"
                android:id="@+id/search_button"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:background="@drawable/custombordersearch"
                android:gravity="fill"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_Search"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="40dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/lupa"
                    tools:layout_editor_absoluteX="75dp"
                    tools:layout_editor_absoluteY="351dp" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto"
                    android:layout_marginLeft="0dp"
                    android:text="Buscar"
                    android:textColor="@color/textos"
                    android:textSize="12pt" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>