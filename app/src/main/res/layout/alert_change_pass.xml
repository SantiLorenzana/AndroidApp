<?xml version="1.0"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#232323"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    tools:context="com.app1t1617.iotgroup.swithome.Login.ResetPassActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Introduzca la nueva contrase単a"
        android:textSize="10pt"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@color/textos" />

    <EditText
        android:id="@+id/profile_old_pass_input"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Contrase単a actual"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColor="@color/textos"
        android:textColorHint="@color/botones" />
    <EditText
        android:id="@+id/profile_new_pass_input"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Nueva contrase単a"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColor="@color/textos"
        android:textColorHint="@color/botones" />
    <EditText
        android:id="@+id/profile_new_pass_repeat"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Repetir nueva contrase単a"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColor="@color/textos"
        android:textColorHint="@color/botones" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp">
        <Button
            android:id="@+id/cancel_profile_pass"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_danger_buton"
            android:text="Cancelar"
            android:textColor="@color/textos"
            android:layout_weight="1"
            android:layout_marginRight="10dp"/>
        <Button
            android:id="@+id/accept_change_pass"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedbutton"
            android:text="Aceptar"
            android:textColor="@color/textos"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>