<?xml version="1.0"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#232323"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    tools:context="com.app1t1617.iotgroup.swithome.Login.ResetPassActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="¿Quieres hacer una nueva foto o elegir una de tu galería?"
        android:textSize="10pt"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@color/textos" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp">
        <Button
            android:id="@+id/camera_profile_photo"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedbutton"
            android:text="Camara"
            android:textColor="@color/textos"
            android:layout_weight="1"
            android:layout_marginRight="10dp"/>
        <Button
            android:id="@+id/galery_profile_photo"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedbutton"
            android:text="Galeria"
            android:textColor="@color/textos"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>